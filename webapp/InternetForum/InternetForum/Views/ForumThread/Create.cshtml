@model InternetForum.Models.CreateForumThreadViewModel
@{
	ViewData["Title"] = "Vytvořit nové vlákno";
}
<h2> Vytvořit nové vlákno </h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" asp-controller="ForumThread">
	<div class="form-group">
		<label asp-for="Name"></label>
		<input type="text" asp-for="Name" class="form-control"/>
	</div>

	<div class="form-group">
		<label asp-for="Description"></label>

		@* Vstupní pole pro vlastnost Description v modelu *@
		<input type="text" asp-for="Description" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Přidat nové vlákno</button>
</form>