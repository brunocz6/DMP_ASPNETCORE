@model InternetForum.Models.EditPostViewModel
@{
	ViewData["Title"] = "Edit";
}
<h2> Upravit příspěvek </h2>

<form asp-action="Edit" asp-controller="Post">
	<div class="form-group">
		<label asp-for="Title" />
		<input type="text" asp-for="Title" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="Body" />
		<input type="text" asp-for="Body" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Uložit</button>
</form>

